<form class='mt-5 w-75 mx-auto' action='/restaurants/{{restaurant._id}}?_method=PUT' method='POST'>
	<div class='mb-3'>
		<label for='name' class='form-label'>店名</label>
		<input
			type='text'
			class='form-control'
			id='name'
			name='name'
			value='{{restaurant.name}}'
			required
		/>
	</div>
	<div class='mb-3'>
		<label for='name-eng' class='form-label'>英文店名</label>
		<input
			type='text'
			class='form-control'
			id='name-eng'
			name='nameEng'
			value='{{restaurant.nameEng}}'
			required
		/>
	</div>
	<div class='mb-3'>
		<label for='category'>類別</label>
		<input
			list='categories'
			class='form-control'
			id='category'
			name='category'
			value='{{restaurant.category}}'
			required
		/>
		<datalist id='categories'>
			<option>中東料理</option>
			<option>日本料理</option>
			<option>義式餐廳</option>
			<option>美式</option>
			<option>酒吧</option>
		</datalist>
	</div>
	<div class='mb-3'>
		<label for='image' class='form-label'>照片</label>
		<input
			type='url'
			class='form-control'
			id='image'
			name='image'
			value='{{restaurant.image}}'
			required
		/>
	</div>
	<div class='mb-3'>
		<label for='location' class='form-label'>地址</label>
		<input
			type='text'
			class='form-control'
			id='location'
			name='location'
			value='{{restaurant.location}}'
			required
		/>
	</div>
	<div class='mb-3'>
		<label for='phone' class='form-label'>電話</label>
		<input
			type='tel'
			class='form-control'
			id='phone'
			name='phone'
			value='{{restaurant.phone}}'
			required
		/>
	</div>
	<div class='mb-3'>
		<label for='google-map' class='form-label'>Google map</label>
		<input
			type='url'
			class='form-control'
			id='google-map'
			name='googleMap'
			value='{{restaurant.googleMap}}'
			required
		/>
	</div>
	<div class='mb-3'>
		<label for='rating' class='form-label'>評分</label>
		<input
			type='number'
			class='form-control'
			id='rating'
			name='rating'
			max='5'
			min='0'
			step='0.1'
			value='{{restaurant.rating}}'
			required
		/>
	</div>
	<div class='mb-3'>
		<label class='d-block' for='description'>介紹</label>
		<textarea
			class='w-100'
			id='description'
			name='description'
			required
		>{{restaurant.description}}</textarea>
	</div>
	<button type='submit' class='btn btn-primary'>儲存</button>
</form>